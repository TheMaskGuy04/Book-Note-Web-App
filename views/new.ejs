    <h1>Congrats on Completing another Book</h1>
    <div class="container new">
        <form action="/newBook" method="POST">
            <label for="title">Title:-</label>
            <input type="text" name="title" class="form-control" placeholder="Title" id="title" required/>

            <label for="author">Author:-</label>
            <input type="text" name="author" class="form-control" placeholder="Author" id="author" required/>
    
            <label for="isbn">ISBN No.:-</label>
            <input type="number" name="isbn" placeholder="e.g. 0767903862 (Required for fetching Cover image)" id="isbn" class="form-control" required/>
    
            <label for="date">Date of read:-</label>
            <input type="date" name="date" placeholder="mm/dd/yyyy" id="date" required class="form-control"/>

            <label for="recommend">How Strongly I recommend:-</label>
            <input type="number" name="recommend" placeholder="Out of 10" id="recommend" max="10" min="1" required class="form-control"/>

            <label for="summary">Summary:-</label>
            <textarea type="text" name="summary" placeholder="" id="summary" class="form-control"></textarea>

            <label for="notes">Notes:-</label>
            <textarea type="text" name="notes" placeholder="" id="notes" class="form-control"></textarea>

            <button class="submit btn btn-primary w-25 py-2" type="submit" >Submit</button>
            
            <p class="mt-2 mb-3 text-body-secondary">©2023</p>
            
        </form>

    </div>

